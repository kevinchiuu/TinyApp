<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

    <button 
      class="navbar-toggler" 
      type="button" data-toggle="collapse" 
      data-target="#navbarNavAltMarkup" 
      aria-controls="navbarNavAltMarkup" 
      aria-expanded="false" 
      aria-label="Toggle navigation">

      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <form method="POST" action="/logout">
      <% if (!locals.user) { %>
        <a href="/login" class="mr-3" style="color:white"> Login </a>
        <a href="/register" style="color: white"> Register </a>

      <% } else { %>
        <div> 
          <div style="font-weight: bold; display: inline-block;"> Logged in as: <%=user %> </div>
          <a href="/login" class=ml-2> <button type="submit" class="btn btn-outline-dark"> logout </button> </a>
        </div>
      <% } %>  
  </form>
  </nav>
</header>